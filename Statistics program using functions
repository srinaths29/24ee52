#include <iostream>
#include <climits> // For INT_MAX and INT_MIN

using namespace std;

// Function to calculate the average of up to 5 integers
double average(int arr[], int n) {
    if (n == 0) return 0.0;  // Prevent division by zero
    double sum = 0;
    for (int i = 0; i < n; i++) {
        sum += arr[i];
    }
    return sum / n;
}

// Function to calculate the sum of up to 5 integers
int sum(int arr[], int n) {
    int total = 0;
    for (int i = 0; i < n; i++) {
        total += arr[i];
    }
    return total;
}

// Function to find the maximum value from up to 5 integers
int maximum(int arr[], int n) {
    int maxVal = INT_MIN;  // Initialize to the smallest possible integer
    for (int i = 0; i < n; i++) {
        if (arr[i] > maxVal) {
            maxVal = arr[i];
        }
    }
    return maxVal;
}

// Function to find the minimum value from up to 5 integers
int minimum(int arr[], int n) {
    int minVal = INT_MAX;  // Initialize to the largest possible integer
    for (int i = 0; i < n; i++) {
        if (arr[i] < minVal) {
            minVal = arr[i];
        }
    }
    return minVal;
}

int main() {
    int n;
    cout << "Enter the number of integers (up to 5): ";
    cin >> n;

    if (n > 5 || n <= 0) {
        cout << "Please enter a number between 1 and 5." << endl;
        return 1;
    }

    int arr[n];
    cout << "Enter " << n << " integers:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // Call the functions and display results
    cout << "Average: " << average(arr, n) << endl;
    cout << "Sum: " << sum(arr, n) << endl;
    cout << "Maximum: " << maximum(arr, n) << endl;
    cout << "Minimum: " << minimum(arr, n) << endl;

    return 0;
}
